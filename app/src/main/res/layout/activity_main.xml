<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/activity_main_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"/>

    <Button
            android:id="@+id/activity_main_test_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_once"/>

    <Button
            android:id="@+id/activity_main_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"/>

    <Button
            android:id="@+id/activity_main_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="randomTestApi"/>

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logcat TAG:MethodCanary" />

    <Button
            android:id="@+id/activity_main_to_main2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jumpToMain2Activity"/>

</LinearLayout>